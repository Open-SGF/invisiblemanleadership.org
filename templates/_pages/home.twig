{% extends '_base.twig' %}

{% block main %}
    {% include '_modules/tab-block.twig' %}
    {% include '_modules/tab-block.twig' %}
    {% if entry.exampleInput %}
        {{ entry.exampleInput }}
    {% endif %}

    {% set blocks = entry.blocks.all() %}
    {% if blocks|length %}
        {% for block in blocks %}
            {% switch block.type %}
            {% case "stats" %}
                {% include '_modules/stats.twig' with {
                    title: block.statsTitle,
                    stats: block.statsList,
                } %}
            {% case "foobar" %}
                {{ block.foobarTitle }}
            {% endswitch %}
        {% endfor %}
    {% endif %}

{% endblock %}
